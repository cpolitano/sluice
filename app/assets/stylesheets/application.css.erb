html {
	background: url('<%= asset_path('sluice.jpg') %>') no-repeat center center fixed;
	background-color: #DDD;
	background-size: cover;
}

body {
	color: #FFF;
	font-family: 'Raleway', sans-serif;
	margin: 0 auto;
}

header {
	height: 100px;
	margin: 0 auto;
	width: 90%;
}

h1 {
	font-family: 'Satisfy', cursive;
	font-size: 5em;
	width: 50%;
}

h1, h2 {
	margin: 0 auto;
	text-align: center;
}

h2 {
	font-size: 2.5em;
	width: 80%;
}

nav {
	height: 50px;
	margin: 5% auto;
}

.menu {
	width: 65%;
}

.signin {
	width: 45%;
}

nav ul {
	list-style-type: none;
	margin: 0 auto;
	width: 100%;
}

nav li {
	background-color: rgba(255,255,255,0);
	border: 2px solid #FFF;
	border-radius: 8px;
	display: inline-block;
	font-size: 1.25em;
	line-height: 50px;
	margin: 0 2%;
	text-align: center;
	transition: background-color 0.3s ease;
	width: 175px;
}

nav li:hover {
	background-color: rgba(255,255,255,.35);
}

a {
	color: #FFF;
}

.container {
	margin: 5% auto;
	width: 60%;
}

.shadow {
	text-shadow: 0px 3px 5px rgba(0, 0, 0, .75);
}

.show a, nav a {
	color: #FFF;
	text-decoration: none;
}

ol {
	font-size: 1.5em;
	margin: 5% auto;
	width: 70%;
}

.show {
	background-color: rgba(255,255,255,.5);
	color: #333;
	margin: 0 auto;
	padding: 2%;
	width: 100%;
}

.show form {
	margin: 1% auto;
	width: 200px;
}

.show input {
	height: 40px;
	line-height: 40px;
	margin-top: -5px;
	margin-bottom: 25px;
	width: 100px;
}

p {
	font-size: 1.5em;
	margin: 2% auto;
	text-align: center;
	width: 600px;
}

input, form {
	font-size: 1.25em;
	text-align: center;
}

form {
	display: block;
	margin: 5% auto;
	width: 400px;
}

input {
	background-color: rgba(255,255,255,.2);
	border: 2px solid #FFF;
	border-radius: 8px;
	color: #FFF;
	font-family: 'Raleway', sans-serif;
	height: 50px;
	line-height: 50px;
	margin: 10px auto;
	transition: background-color 0.3s ease;
	width: 200px;
}

input:hover {
	background-color: rgba(255,255,255,.35);
}


